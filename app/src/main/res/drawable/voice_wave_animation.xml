<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    
    <aapt:attr name="android:drawable">
        <vector
            android:width="200dp"
            android:height="200dp"
            android:viewportWidth="200"
            android:viewportHeight="200">
            
            <path
                android:name="wave1"
                android:pathData="M 20,100 Q 50,80 80,100 T 140,100"
                android:strokeWidth="3"
                android:strokeColor="@color/voice_wave_primary"
                android:fillColor="@android:color/transparent" />
                
            <path
                android:name="wave2"
                android:pathData="M 20,100 Q 50,120 80,100 T 140,100"
                android:strokeWidth="3"
                android:strokeColor="@color/voice_wave_secondary"
                android:fillColor="@android:color/transparent" />
                
            <path
                android:name="wave3"
                android:pathData="M 20,100 Q 50,90 80,100 T 140,100"
                android:strokeWidth="3"
                android:strokeColor="@color/voice_wave_tertiary"
                android:fillColor="@android:color/transparent" />
        </vector>
    </aapt:attr>
    
    <target android:name="wave1">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="1000"
                    android:valueFrom="M 20,100 Q 50,80 80,100 T 140,100"
                    android:valueTo="M 20,100 Q 50,120 80,100 T 140,100"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="1000"
                    android:valueFrom="M 20,100 Q 50,120 80,100 T 140,100"
                    android:valueTo="M 20,100 Q 50,80 80,100 T 140,100"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="wave2">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="1000"
                    android:valueFrom="M 20,100 Q 50,120 80,100 T 140,100"
                    android:valueTo="M 20,100 Q 50,80 80,100 T 140,100"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="1000"
                    android:valueFrom="M 20,100 Q 50,80 80,100 T 140,100"
                    android:valueTo="M 20,100 Q 50,120 80,100 T 140,100"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>
    
    <target android:name="wave3">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="1000"
                    android:valueFrom="M 20,100 Q 50,90 80,100 T 140,100"
                    android:valueTo="M 20,100 Q 50,110 80,100 T 140,100"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="1000"
                    android:valueFrom="M 20,100 Q 50,110 80,100 T 140,100"
                    android:valueTo="M 20,100 Q 50,90 80,100 T 140,100"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>
    
</animated-vector> 