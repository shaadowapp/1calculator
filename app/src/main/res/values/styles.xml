<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberKey">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpecialFunction">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MathOperator">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EqualsOperator">
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionOperator">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/subtle_text</item>
        <item name="android:backgroundTint">@color/button_vlight_bg</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonCalcInline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">#333333</item>
    </style>

    <style name="WidgetCalcButton">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#333333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WidgetCalcButtonWhite">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WidgetCalcButtonGrid">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:gravity">center</item>
    </style>

</resources>