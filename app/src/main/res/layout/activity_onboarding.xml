<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background">

    <!-- Top: Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:minHeight="200dp"
        android:overScrollMode="never"
        android:background="@android:color/transparent" />

    <!-- Page indicators -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/onboarding_tab_indicator"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:layout_gravity="center_horizontal"
        app:tabIndicatorColor="@color/brand_blue"
        app:tabSelectedTextColor="@color/brand_blue"
        app:tabTextColor="@color/subtle_text"
        app:tabIndicatorHeight="4dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <!-- Bottom: Preference selection -->
    <LinearLayout
        android:id="@+id/preference_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_calculator"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/brand_blue"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calc_icon"
                    android:contentDescription="Calculator Icon"
                    android:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculator"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classic, fast, and powerful."
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_mathly"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/brand_color"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_microphone"
                    android:contentDescription="Mathly Icon"
                    android:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathly"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solve by voice, hands-free."
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Prompt to choose default screen -->
    <TextView
        android:id="@+id/tv_choose_default_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your default screen"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:paddingBottom="8dp" />

    <!-- Hidden permission button, shown after preference is picked -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_grant_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant Mic &amp; Camera Permissions"
        android:layout_margin="24dp"
        android:visibility="gone"
        app:cornerRadius="16dp"
        android:textSize="16sp"
        android:backgroundTint="@color/brand_green"
        android:textColor="@color/white" />

</LinearLayout> 