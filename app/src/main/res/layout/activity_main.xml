<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Navigation Buttons -->
    <LinearLayout
        android:id="@+id/navigation_buttons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="#121212"
        android:gravity="center">

        <Button
            android:id="@+id/nav_basic"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textColor="#FF9800"
            android:backgroundTint="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/nav_advanced"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advance"
            android:textColor="@android:color/white"
            android:backgroundTint="#000000"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/nav_history"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@android:color/white"
            android:backgroundTint="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Output Display Area -->
    <LinearLayout
        android:layout_below="@id/navigation_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#121212"
        android:padding="18dp">

        <TextView
            android:id="@+id/solution_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <!-- Result display -->
        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="48sp" />
    </LinearLayout>


    <!-- Calculator buttons -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#000000"
        android:paddingVertical="12dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sqrt"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="√"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_power"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="^"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_pi"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="π"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_factorial"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="!"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#000000"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <!--Row 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_bracket"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                android:textSize="24sp"
                android:text="()"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_percent"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                android:text="%"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:backgroundTint="#FF9800"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_backspace"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                app:icon="@drawable/ic_backspace"
                app:iconTint="@color/white"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                app:iconGravity="textStart"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="28sp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="×"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <!-- Row 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:backgroundTint="#F44336"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp"
                android:backgroundTint="#121212" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:cornerRadius="36dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
