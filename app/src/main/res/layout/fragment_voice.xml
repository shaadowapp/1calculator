<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Permission Dialog Container -->
    <LinearLayout
        android:id="@+id/permission_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="@color/voice_permission_bg"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_microphone"
            android:background="@drawable/circle_background"
            android:padding="20dp"
            app:tint="@color/voice_mic_primary"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_permission_title"
            android:textColor="@color/voice_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_permission_message"
            android:textColor="@color/voice_text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/grant_permission_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voice_permission_grant"
            android:textColor="@color/white"
            app:backgroundTint="@color/voice_mic_primary"
            app:cornerRadius="24dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skip_permission_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voice_permission_skip"
            android:textColor="@color/voice_text_secondary"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/voice_text_secondary"
            app:strokeWidth="1dp"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <!-- Ask Mathly Screen Container -->
    <LinearLayout
        android:id="@+id/ask_mathly_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voice_title"
                android:textColor="@color/voice_text_primary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voice_subtitle"
                android:textColor="@color/voice_text_secondary"
                android:textSize="16sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Center Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Mic Button Container with Wave Animation -->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <!-- Wave Animation Container -->
                <FrameLayout
                    android:id="@+id/wave_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:gravity="center">

                    <!-- Wave Circle 1 -->
                    <View
                        android:id="@+id/wave_circle_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/voice_wave_circle"
                        android:alpha="0.9" />

                    <!-- Wave Circle 2 -->
                    <View
                        android:id="@+id/wave_circle_2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/voice_wave_circle"
                        android:alpha="0.7" />

                    <!-- Wave Circle 3 -->
                    <View
                        android:id="@+id/wave_circle_3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@drawable/voice_wave_circle"
                        android:alpha="0.5" />

                </FrameLayout>

                <!-- Mic Button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/mic_button"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_microphone"
                    app:fabSize="normal"
                    app:backgroundTint="@color/voice_mic_primary"
                    app:tint="@color/white"
                    app:elevation="8dp"
                    app:maxImageSize="60dp"
                    android:contentDescription="@string/voice_tap_to_speak" />

            </FrameLayout>

            <!-- Status Text -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voice_tap_to_speak"
                android:textColor="@color/voice_text_primary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:gravity="center" />

            <!-- Result Container -->
            <LinearLayout
                android:id="@+id/result_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:visibility="gone">

                <!-- Expression -->
                <TextView
                    android:id="@+id/expression_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/voice_text_primary"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Result -->
                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/voice_mic_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 