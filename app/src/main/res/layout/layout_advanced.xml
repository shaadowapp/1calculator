<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top bar with back and search -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#222"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back_text" />

        <TextView
            android:id="@+id/screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advance"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/search_text" />
    </LinearLayout>

    <!-- Content below top bar -->
    <ScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/fab_calculator"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Recent Calculations Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/recent_calculations_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Calculations"
                    android:textColor="@color/category_grey"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_view_all_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
                    android:textColor="#FF9800"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingEnd="0dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <!-- Recent Calculations Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/recent_history_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- Algebra Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/algebra"
                android:textColor="@color/category_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/algebra_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

            <!-- Geometry Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geometry"
                android:textColor="@color/category_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="18dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/geometry_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

            <!-- Finance Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finance"
                android:textColor="@color/category_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="18dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/finance_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

            <!-- Repeat the same for other sections -->
            <!-- Insurance -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/insurance_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

            <!-- Health -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/health_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

            <!-- Date & Time -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/date_time_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

            <!-- Other Units -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/other_units_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

        </LinearLayout>
    </ScrollView>

    <!-- FloatingActionButton at bottom-right -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:contentDescription="@string/calculator_text"
        android:text="@string/calculator_text"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/purple_200"
        app:icon="@drawable/ic_calc_icon"
        app:iconTint="@color/white"
        app:tint="@color/white" />

</RelativeLayout>