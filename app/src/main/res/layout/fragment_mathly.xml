<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mathly_bg">

    <!-- Left edge gesture zone -->
    <View
        android:id="@+id/left_edge_gesture"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <!-- Right edge gesture zone -->
    <View
        android:id="@+id/right_edge_gesture"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top Section: Heading, Tagline, Version -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mathly_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask Mathly"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mathly_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your AI Math Assistant"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/mathly_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mathly_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/mathly_tagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- Center Section: Main Content -->
    <LinearLayout
        android:id="@+id/mathly_center_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/mathly_version"
        app:layout_constraintBottom_toTopOf="@id/mathly_warning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <View
            android:id="@+id/listeningAnimation"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/pulse_circle"
            android:layout_gravity="center"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTranscription"
            android:text="Say 'Hey Mathly' to start..."
            android:textSize="18sp"
            android:textColor="@color/voice_text_primary"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAnswer"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/voice_mic_primary"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:text="Stop Listening"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/voice_mic_primary"
            android:textColor="@color/white"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchLearn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dev mode"
            android:layout_gravity="center"
            android:checked="false"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:text="Confirm"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/voice_mic_primary"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            android:text="Edit"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/voice_mic_primary"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editCorrection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type the correct phrase..."
                android:textColor="@color/voice_text_primary"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Bottom Warning -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mathly_warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remember Mathly can make mistakes, so be cautious while using."
        android:textColor="@color/voice_text_primary"
        android:textSize="11sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout> 