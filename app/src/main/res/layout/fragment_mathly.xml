<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mathly_bg">

    <View
        android:id="@+id/listeningAnimation"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/pulse_circle"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvTranscription"
        android:text="Say 'Hey Mathly' to start..."
        android:textSize="18sp"
        android:textColor="@color/voice_text_primary"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAnswer"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/voice_mic_primary"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnStop"
        android:text="Stop Listening"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_rounded"
        android:textColor="@color/voice_text_primary"/>

</LinearLayout> 